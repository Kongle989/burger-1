<h1>Burger Time!</h1>

<h2>Burgers to Eat:</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Eat!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>


<h2>Devoured Burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Regurgitate!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Create Burger:</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="ea">Eaten?</label><br>
    <input type="radio" name="devoured" value="0" checked> Not Eaten<br>
    <input type="radio" name="devoured" value="1"> Devoured
  </div>

  <button type="submit">Submit Burger</button>
</form>